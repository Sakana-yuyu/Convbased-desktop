{
  "name": "convbased-desktop",
  "version": "1.4.0",
  "description": "Convbased studio 的桌面应用端",
  "main": "main.js",
  "author": "Sakana",
  "homepage": "https://github.com/Sakana-yuyu/Convbased-desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sakana-yuyu/Convbased-desktop.git"
  },
  "keywords": ["electron", "desktop", "conversation", "chat", "productivity"],
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-portable": "electron-builder --win --config.win.target=portable",
    "dev": "electron . --dev",
    "release": "node scripts/release.js",
    "release:patch": "npm version patch && npm run release",
    "release:minor": "npm version minor && npm run release",
    "release:major": "npm version major && npm run release"
  },
  "dependencies": {
    "electron-store": "^10.1.0",
    "vue": "^3.3.0",
    "@vitejs/plugin-vue": "^4.4.0",
    "vite": "^4.5.0"
  },
  "devDependencies": {
    "electron": "^37.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.convbased.desktop",
    "productName": "Convbased Desktop",
    "copyright": "Copyright © 2024 Sakana. All rights reserved.",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src",
      "assets",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "publisherName": "Sakana",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "dmg": {
      "format": "ULFO",
      "writeUpdateInfo": false,
      "background": null,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Convbased Desktop",
      "displayLanguageSelector": false,
      "installerLanguages": ["zh_CN"],
      "language": "2052"
    }
  }
}